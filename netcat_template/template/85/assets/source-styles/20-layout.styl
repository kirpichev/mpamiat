.l-grid
  padding-right: 57.29%
  position: relative
  zoom: 1
  .ie7 &
    padding-right: 0
    margin-right: 57.29%

  &:before, &:after
    clear: both
    content: ''
    display: block

  &.debug &__module
    background: rgba(pink, 0.2)

  &__module
    float: left
    position: relative

    .ie7 &
      display: inline

    for count in 0...12
      num = count + 1
      l = count * 20
      w = l + 14
      &--span-{num}
        margin-right: -(w)%
        width: (w)%
      &--col-{num}
        left: (l)%












