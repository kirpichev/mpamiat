
*, *:after, *:before
  box-sizing: border-box


body
  // min-width: 1220px
  min-width: 1000px
  // overflow-x: hidden
  @media max
    // min-width: 1980px
  @media min
    min-width: 640px
    max-width: 640px
    overflow-x: hidden
    margin: 0 auto

.tpl-block-aside
  float: left
  width: 22%
  position: relative
  transition: left 0.2s, margin-top 0.2s
  padding-right: 20px
  @media max
    display: block
    margin-right: -100%
    left: -22%
    width: 20%
    margin-top: -25px
  @media min
    float: none
    width: 100%
    transition: none
    padding: 0
    margin-top: -25px
  .tpl-block-content--frontpage &
    top: -435px
    @media min
      display: none

.tpl-block-main
  float: left
  width: 78%
  @media max
    width: 100%
  // overflow: hidden
  @media min
    float: none
    width: auto
  &--wide
    float: none
    width: auto !important

// Резервируем место для хлебных крошек
.tpl-block-content > .tpl-block-layoutwidth:first-child
  @media min
    padding-top: 150px

.tpl-block-content--frontpage
  padding-top: 435px
  // debug(3)
  @media min
    padding-top: 781px

.tpl-block-layoutwidth
  margin: 0 auto
  position: relative
  min-width: 1000px //viewport = 980
  max-width: 1180px
  width: 100%
  // background: rgba(pink, 0.3)
  // min-width: 1220px
  // debug(2)
  padding: 0 20px

  @media min
    width: 640px
    padding: 0 50px
    min-width: 640px
    max-width: 640px
    overflow-x: hidden

  @media max
    width: 1300px

.tpl-block-notformobile
  @media min
    display: none


