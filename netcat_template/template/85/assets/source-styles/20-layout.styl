  &--size_l
    margin-bottom: 60px
  &--size_xl
    margin-bottom: 80px
  &--size_xxl
    margin-bottom: 100px
  &--size_5
    margin-bottom: 5px
  &--size_10
    margin-bottom: 10px
  &--size_20
    margin-bottom: 20px
  &--size_30
    margin-bottom: 30px
  &--size_40
    margin-bottom: 40px
  &--size_60
