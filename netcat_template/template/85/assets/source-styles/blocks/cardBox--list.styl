
// Список
cardList()
  border: 5px solid colorDull
  padding: 15px 15px 15px
  height: 220px
  width: 100%
  .tpl-field-title
    display: block
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    text-align: left
    position: absolute
    left: 300px
    right: 300px
    top: 25px
    width: 395px
    gright()
  .tpl-field-description
    display: block
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    line-height: 1.2
    position: absolute
    left: 300px
    top: 60px
    right: 300px
    text-align: left
    font-weight: 400
    gright()

  .tpl-field-image
    display: block
    position: absolute
    width: 250px
    left: 25px
    top: 25px
    height: 160px
    line-height: 155px
  .tpl-block-rating
    display: block
    position: absolute
    right: 180px
    top: 45px
    font-size: 16px
    text-align: left
  .tpl-field-cost
    display: block
    position: absolute
    left: 100%
    margin-left: -150px
    top: 25px
    line-height: 1.2
    font-size: 28px
    text-align: left
    font-weight: 400
    width: 130px
  .tpl-block-variants
    display: block
    position: absolute
    top: 18px
    right: 180px
    font-size: 18px
    font-weight: 400
    line-height: 30px

  .tpl-block-cardbox-menu
    display: block
    position: absolute
    left: 100%
    margin-left: -150px
    top: 150px
    width: 115px
    @media max
      left: 1090px

  .tpl-block-cardbox-buy
    display: block
    position: absolute
    top: 80px
    left: 100%
    width: 130px
    margin-left: -150px

  .tpl-field-text
     display: block
     position: absolute
     left: 300px
     right: 180px
     top: 85px
     height: 100px
     line-height: 1.45
     overflow: hidden
     text-overflow: ellipsis
     gright()
     &:after
       height: 1.4em
       top: auto
       bottom: 0
     @media max
       width: 735px
     @media min
       display: block

  .tpl-block-cardbox-link
    display: block
    text-decoration: none
    color: colorBase
    &:hover
      color: colorBase
      .tpl-field-title
        color: colorRed

