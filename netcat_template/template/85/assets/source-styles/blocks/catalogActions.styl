.tpl-block-catalogactions
  font-weight: 400
  &-row
    clearfix()
    margin-bottom: 5px
  &-col
    float: left
    margin-right: -100%
    left: 0
    position: relative
    transition: width 0.2s, left 0.2s
    // background: pink
    @media min
      float: none
      position: static
      width: 100% !important
      left: 0 !important
    &--1
      left: 0
      width: 33.333%
      padding-right: 20px
      @media max
        width: 50%
        padding-right: 10px
    &--2
      left: 33.333%
      width: 30%
      padding-left: 10px
      @media max
        left: 50%
        width: 25%
    &--3
      left: 66.666%
      width: 22%
      padding-left: 15px
      @media max
        left: 75%
        width: 25%
    &--4
      // left: 90%
      float: right
      margin-right: 0
      width: 70px
    &--pages
      left: 66.666%
      width: 33.333%
      padding-left: 15px
      padding-right: 85px
      @media max
        left: 75%
        width: 25%

  .tpl-block-pseudolink
    margin-left: 10px
    display: inline-block
    &:first-child
      margin-left: 0
  .tpl-block-breadcrumbs
    padding-top: 0.5em