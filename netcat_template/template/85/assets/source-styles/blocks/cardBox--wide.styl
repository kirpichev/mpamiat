
// Широкая карточка
cardWide()
  border: 5px solid colorDull
  padding: 15px 15px 15px
  // width: 300px
  width: auto
  height: 315px
  @media screen and (min-width: 321px) and (max-width: 1270px)
    height: 400px
  .tpl-field-title
    display: block
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
  .tpl-field-description
    display: block
    position: relative
    margin: -0.4em 0 0
    line-height: 1.2
    z-index: 3
    gbottom()
  .tpl-field-image
    display: block
    position: absolute
    left: 15px
    right: 15px
    width: 110px
    height: 140px
    line-height: 140px
    float: left
    top: 90px
    @media screen and (min-width: 321px) and (max-width: 1270px)
      top: 105px
      height: 100px
      left: 15px
      right: 15px
      line-height: 100px
      width: auto
      float: none
  .tpl-block-rating
    display: block
    position: absolute
    left: 140px
    top: 90px
    font-size: 1.3em
    width: 115px
    @media screen and (min-width: 321px) and (max-width: 1270px)
      left: 15px
      top: 205px
      font-size: 1em
  .tpl-field-cost
    display: block
    position: absolute
    left: 140px
    top: 125px
    width: 130px
    font-size: 32px
    @media screen and (min-width: 321px) and (max-width: 1270px)
      left: 15px
      top: 245px
      font-size: 25px
      font-weight: 400
      line-height: 30px

  .tpl-block-variants
    display: block
    position: absolute
    left: 140px
    top: 175px
    font-size: 18px
    // display: none
    display: block
    &-popup
      left: -80px
      bottom: 0
    @media screen and (min-width: 321px) and (max-width: 1270px)
      right: 15px
      top: 238px
      line-height: 30px
  .tpl-field-oldcost
    display: block
    position: absolute
    left: 140px
    top: 180px
    font-size: 18px
    opacity: 0.2
    @media screen and (min-width: 321px) and (max-width: 1270px)
      left: auto
      right: 15px
      top: 240px
    &:after
      content: ''
      border-bottom: 2px solid colorRed
      left: 0
      top: 52%
      width: 100%
      height: 0
      position: absolute
  .tpl-block-cardbox-link
    display: block
    text-decoration: none
    color: colorBase
    &:hover
      color: colorBase
      .tpl-field-title
        color: colorRed
  .tpl-block-cardbox-menu
    display: block
    position: absolute
    left: 15px
    top: 250px
    width: 110px
    &:first-child
      padding-right: 10px
    @media screen and (min-width: 321px) and (max-width: 1270px)
      left: 15px
      top: 285px
      width: 115px
  .tpl-block-cardbox-buy
    display: block
    position: absolute
    left: auto
    right: 15px
    width: 125px
    bottom: 20px
    height: 40px
    @media screen and (min-width: 321px) and (max-width: 1270px)
      right: auto
      left: 15px
