.tpl-block-asidemenu
  position: relative
  width: 100%
  background: #000E52
  padding: 11px 0
  z-index: 8
  &:before
    position: absolute
    content: ''
    width: 0
    height: 0
    border-color: transparent
    border-bottom-color: #000E52
    border-style: solid
    border-width: 10px 13px
    bottom: 100%
    left: 20px
  @media max
    &:before
      display: none
  @media min
    display: none
  &-item
    color: colorWhite
    font-size: 16px
    font-weight: 300
    line-height: 1.15
  a
    color: colorWhite
    text-decoration: none
    display: block
    padding: 9px 20px
    &:hover
      color: colorRed
    &.tpl-state-current
      opacity: 0.6
      pointer-events: none