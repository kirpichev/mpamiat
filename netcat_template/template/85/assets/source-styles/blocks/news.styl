.tpl-block-newslist
  &-title
    color: colorRed
    font-size: 25px
    font-weight: 600
    line-height: 30px
    @media min
      border-top: 1px solid #BCBBC1
      padding: 50px 50px 0
      margin: 0 -50px
    .tpl-link-more
      color: colorRed
      float: right
      font-size: 14px
      font-weight: 400
      &:hover
        color: colorBase
      @media min
        display: none
  &-item
    margin-top: 20px
    @media min
      margin-top: 40px


.tpl-block-newsbox
  .tpl-field-date
    color: colorGray
    text-transform: uppercase
    font-weight: 400
    line-height: 1.4
  .tpl-field-title
    display: block
    border-bottom: 5px solid #F62733
    font-size: 20px
    font-weight: 600
    text-transform: uppercase
    line-height: 1.2
    text-decoration: none
    color: colorBase
    padding-bottom: 10px
    margin: 5px 0 0
    @media min
      font-size: 36px
      border-bottom-width: 10px
      padding-bottom: 20px
      margin-top: 15px
  a.tpl-field-title:hover
    color: colorRed
  .tpl-field-text
    line-height: 1.3
    margin: 10px 0 0
    font-weight: 400
    @media min
      margin-top: 20px
      font-size: 24px
      font-weight: 300
      line-height: 1.8
    a
      color: colorRed
      &:hover
        color: colorBase
