.tpl-block-header
  padding-top: 20px
  line-height: 20px
  font-weight: 400
  margin-bottom: 20px
  position: relative
  z-index: 30
  // background: lightgreen
  @media min
    line-height: lineHeight
    padding: 0
    height: 100%
    margin-bottom: 0
  &-row
    clearfix()
  &-col
    float: left
    margin-right: -100%
    position: relative
    width: 26%
    padding-left: 80px
    // debug()
    &--1
      padding-left: 0
      width: 22%
      left: 0
    &--2
      left: 22%
    &--3
      left: 48%
    &--4
      left: 74%
    &--menu
      left: 0
      width: 50%
      padding-left: 0
      z-index: 2
    &--search
      left: 48%
      width: 52%
  .tpl-block-layoutwidth
    @media min
      display: none


.tpl-block-header-top-navbar {
  min-height: 30px;
}





.tpl-block-citychoice
  height: 30px
  position: relative
  top: -5px
  select
    width: auto
    display: inline-block
  .chosen-container
    margin-left: -20px
    .chosen-single
      display: inline-block
      height: auto
      line-height: 2.15em
      background: transparent
      transition: color 0.2s
      // &:hover
      //   color: colorRed
      &:after
        font-size: 1.2em
        line-height: 1.9em
    .chosen-results
      max-height: 400px
      li
        padding: 7px 20px
