
// Плитка
cardMini()
  background: #F5F5F5
  border: 5px solid #F5F5F5
  padding: 20px 10px 20px 115px
  // width: 300px
  width: auto
  height: 140px
  .tpl-field-title
    display: block
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap
    font-weight: 500
    font-size: 16px
    line-height: 1.2
  .tpl-field-description
    display: block
    position: relative
    margin-top: -0.5em
    line-height: 1
    text-align: left
    background: none
    font-size: 12px
    font-style: italic
    font-weight: 400
    text-overflow: ellipsis
  .tpl-field-image
    display: block
    position: absolute
    left: 15px
    top: 20px
    width: 90px
    height: 65px
    line-height: 60px
  .tpl-block-rating
    display: block
    position: absolute
    left: 15px
    width: 90px
    bottom: 20px
    font-size: 14px
    line-height: 1.4
  .tpl-field-cost
    display: block
    position: absolute
    left: 115px
    bottom: 17px
    font-size: 22px
    line-height: 1
    text-align: center
    font-weight: 400
  .tpl-block-cardbox-link
    display: block
    text-decoration: none
    color: colorBase
    &:hover
      color: colorBase
      .tpl-field-title
        color: colorRed



