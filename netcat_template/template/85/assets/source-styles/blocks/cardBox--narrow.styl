
// Узкая карточка
cardNarrow()
  border: 5px solid colorDull
  padding: 15px 15px 15px
  // width: 220px
  width: auto
  height: 420px
  .tpl-field-title
    display: block
  .tpl-field-description
    display: block
    position: relative
    margin: -0.4em 0 0
    line-height: 1.2
    z-index: 3
    gbottom()

  .tpl-field-image
    display: block
    position: absolute
    top: 125px
    height: 100px
    left: 15px
    right: 15px
    line-height: 100px
  .tpl-block-rating
    display: block
    position: absolute
    left: 15px
    top: 225px
    font-size: 1em
  .tpl-field-cost
    display: block
    position: absolute
    left: 15px
    top: 265px
    font-size: 25px
    font-weight: 400
    line-height: 30px
  .tpl-block-variants
    position: absolute
    right: 15px
    top: 258px
    line-height: 30px
  .tpl-block-cardbox-link
    display: block
    text-decoration: none
    color: colorBase
    &:hover
      color: colorBase
      .tpl-field-title
        color: colorRed
  .tpl-block-cardbox-menu
    display: block
    position: absolute
    left: 15px
    top: 305px
    width: 115px
    &:first-child
      padding-right: 10px
  .tpl-block-cardbox-buy
    display: block
    position: absolute
    left: 15px
    bottom: 20px
    width: 115px
    height: 40px
