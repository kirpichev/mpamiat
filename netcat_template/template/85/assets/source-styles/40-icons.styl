.icon-lowtohight,
.icon-highttolow
  width: 16px
  height: 11px
  color: colorRed
  position: relative
  overflow: hidden
  top: -1px
  &:before
    position: absolute
    content: ''
    width: 0
    height: 0
    border-color: transparent
    border-bottom-color: inherit
    border-style: solid
    border-width: 10px 16px
    bottom: 1px
    left: -1px
.icon-highttolow:before
  left: auto
  right: -2px
